{
	"name": "mado-ui",
	"author": "Andrilla LLC",
	"version": "0.5.6",
	"description": "A collection of opinionated React components built on Tailwind CSS",
	"repository": "https://github.com/andrilla-llc/mado-ui",
	"license": "GNU GPL",
	"main": "dist/index.js",
	"module": "dist/index.esm.js",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.esm.js",
			"require": "./dist/index.js"
		},
		"./components": {
			"types": "./dist/components.d.ts",
			"import": "./dist/components.esm.js",
			"require": "./dist/components.js"
		},
		"./css": "./css/index.css",
		"./css/index.css": "./css/index.css",
		"./graphics": {
			"types": "./dist/graphics.d.ts",
			"import": "./dist/graphics.esm.js",
			"require": "./dist/graphics.js"
		},
		"./hooks": {
			"types": "./dist/hooks.d.ts",
			"import": "./dist/hooks.esm.js",
			"require": "./dist/hooks.js"
		},
		"./icons": {
			"types": "./dist/icons.d.ts",
			"import": "./dist/icons.esm.js",
			"require": "./dist/icons.js"
		},
		"./types": "./dist/types.d.ts",
		"./utils": {
			"types": "./dist/utils.d.ts",
			"import": "./dist/utils.esm.js",
			"require": "./dist/utils.js"
		}
	},
	"files": [
		"dist",
		"css"
	],
	"scripts": {
		"build:css": "postcss src/css/index.css -o css/index.css",
		"watch:css": "postcss src/css/index.css -o css/index.css --watch",
		"build": "npm run build:css && rollup -c && rollup -c rollup.dts.config.js",
		"dev": "npm run watch:css & rollup -c -w",
		"prepublishOnly": "npm run build",
		"lint": "eslint"
	},
	"dependencies": {
		"@floating-ui/react-dom": "^2.1.6"
	},
	"peerDependencies": {
		"@headlessui/react": "^2.2.4",
		"react": "^19 || ^19.0.0-rc",
		"react-dom": "^19 || ^19.0.0-rc",
		"tailwind-merge": "^3.2.0",
		"tailwindcss": "^4.1.4"
	},
	"devDependencies": {
		"@rollup/plugin-node-resolve": "^16.0.3",
		"@rollup/plugin-typescript": "^12.3.0",
		"@tailwindcss/postcss": "^4.1.17",
		"@types/node": "^24.10.1",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"eslint": "^9.39.1",
		"eslint-config-next": "^16.0.7",
		"next": "^16.0.7",
		"postcss": "^8.5.6",
		"postcss-cli": "^11.0.1",
		"prettier": "^3.7.4",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"rollup": "^4.53.3",
		"rollup-plugin-dts": "^6.3.0",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"rollup-plugin-postcss": "^4.0.2",
		"typescript": "^5.9.3"
	}
}
