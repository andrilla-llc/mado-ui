{
	"name": "mado-ui",
	"author": "Andrilla LLC",
	"version": "0.5.2",
	"description": "A collection of opinionated React components built on Tailwind CSS",
	"repository": "https://github.com/andrilla-llc/mado-ui",
	"license": "GNU GPL",
	"main": "dist/index.js",
	"module": "dist/index.esm.js",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.esm.js",
			"require": "./dist/index.js"
		},
		"./components": {
			"types": "./dist/components.d.ts",
			"import": "./dist/components.esm.js",
			"require": "./dist/components.js"
		},
		"./css": "./css/index.css",
		"./css/index.css": "./css/index.css",
		"./hooks": {
			"types": "./dist/hooks.d.ts",
			"import": "./dist/hooks.esm.js",
			"require": "./dist/hooks.js"
		},
		"./icons": {
			"types": "./dist/icons.d.ts",
			"import": "./dist/icons.esm.js",
			"require": "./dist/icons.js"
		},
		"./types": "./dist/types.d.ts",
		"./utils": {
			"types": "./dist/utils.d.ts",
			"import": "./dist/utils.esm.js",
			"require": "./dist/utils.js"
		}
	},
	"files": [
		"dist",
		"css"
	],
	"scripts": {
		"build:css": "postcss src/css/index.css -o css/index.css",
		"watch:css": "postcss src/css/index.css -o css/index.css --watch",
		"build": "npm run build:css && rollup -c && rollup -c rollup.dts.config.js",
		"dev": "npm run watch:css & rollup -c -w",
		"prepublishOnly": "npm run build"
	},
	"dependencies": {
		"@floating-ui/react-dom": "^2.1.4"
	},
	"peerDependencies": {
		"@headlessui/react": "^2.2.4",
		"react": "^19 || ^19.0.0-rc",
		"react-dom": "^19 || ^19.0.0-rc",
		"tailwind-merge": "^3.2.0",
		"tailwindcss": "^4.1.4"
	},
	"devDependencies": {
		"@rollup/plugin-node-resolve": "^16.0.1",
		"@rollup/plugin-typescript": "^12.1.4",
		"@tailwindcss/postcss": "^4.1.11",
		"@types/node": "^24.0.14",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"postcss": "^8.5.6",
		"postcss-cli": "^11.0.1",
		"prettier": "^3.6.2",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"rollup": "^4.45.1",
		"rollup-plugin-dts": "^6.2.1",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"rollup-plugin-postcss": "^4.0.2",
		"typescript": "^5.8.3"
	},
	"prettier": {
		"singleQuote": true,
		"semi": false,
		"printWidth": 120,
		"useTabs": true,
		"tabWidth": 2,
		"arrowParens": "avoid",
		"jsxSingleQuote": true,
		"tailwindStylesheet": "./src/css/index.css",
		"tailwindFunctions": [
			"twMerge",
			"twJoin",
			"twSort"
		],
		"plugins": [
			"prettier-plugin-tailwindcss"
		]
	}
}
