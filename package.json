{
	"name": "mado-ui",
	"author": "Andrilla LLC",
	"version": "0.1.0",
	"description": "A collection of opinionated React components built on Tailwind CSS",
	"repository": "https://github.com/andrilla-llc/mado-ui",
	"license": "GNU GPL",
	"main": "dist/index.js",
	"module": "dist/index.esm.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"files": [
		"dist",
		"css"
	],
	"scripts": {
		"build:css": "postcss src/css/index.css -o css/index.css",
		"watch:css": "postcss src/css/index.css -o css/index.css --watch",
		"build": "npm run build:css && rollup -c",
		"dev": "npm run watch:css & rollup -c -w",
		"prepublishOnly": "npm run build"
	},
	"peerDependencies": {
		"@headlessui/react": "^2.2.4",
		"react": "^19 || ^19.0.0-rc",
		"react-dom": "^19 || ^19.0.0-rc",
		"tailwind-merge": "^3.2.0",
		"tailwindcss": "^4.1.4"
	},
	"devDependencies": {
		"@rollup/plugin-node-resolve": "^16.0.1",
		"@rollup/plugin-typescript": "^12.1.2",
		"@tailwindcss/postcss": "^4.1.8",
		"@types/node": "^22.15.29",
		"@types/react": "^19.1.6",
		"@types/react-dom": "^19.1.5",
		"postcss": "^8.5.4",
		"postcss-cli": "^11.0.1",
		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6.12",
		"rollup": "^4.41.1",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"rollup-plugin-postcss": "^4.0.2",
		"typescript": "^5.8.3"
	},
	"prettier": {
		"singleQuote": true,
		"semi": false,
		"printWidth": 120,
		"useTabs": true,
		"tabWidth": 2,
		"arrowParens": "avoid",
		"jsxSingleQuote": true,
		"tailwindStylesheet": "./app/globals.css",
		"tailwindFunctions": [
			"twMerge",
			"twJoin",
			"twSort"
		],
		"plugins": [
			"prettier-plugin-tailwindcss"
		]
	}
}
