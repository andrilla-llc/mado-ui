{
	"compilerOptions": {
		"target": "ES2021",
		"module": "ESNext",
		"moduleResolution": "node",
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"strict": true,
		"declaration": true,
		"declarationDir": "dist",
		"outDir": "dist",
		"rootDir": "src",
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
